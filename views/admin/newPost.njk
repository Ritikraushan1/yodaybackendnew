{% extends "admin/layout.njk" %}
{% set active = "newPost" %}

{% block content %}
<h1 class="text-3xl font-bold mb-6">Create New Post</h1>
<div class="bg-white p-6 rounded-2xl shadow-lg">
  <form method="post" action="/admin/posts" class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700">Title</label>
      <input type="text" name="title" required class="w-full border rounded-lg p-2">
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Content</label>
      <textarea name="content" rows="4" required class="w-full border rounded-lg p-2"></textarea>
    </div>
    <button type="submit" class="bg-gradient-to-r from-purple-600 to-indigo-600 text-white px-4 py-2 rounded-lg hover:opacity-90">Publish</button>
  </form>
</div>
{% endblock %}
