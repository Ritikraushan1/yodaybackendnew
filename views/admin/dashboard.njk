{% extends "admin/layout.njk" %}
{% set active = "dashboard" %}

{% block content %}
<h1 class="text-4xl font-extrabold mb-8">Welcome, {{ user.name }}</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
  <div class="bg-white p-6 rounded-2xl shadow-lg border border-purple-200">
    <h2 class="text-lg font-semibold text-purple-700">Total Posts</h2>
    <p class="text-4xl font-bold mt-2">{{ stats.totalPosts or "0" }}</p>
  </div>
  <div class="bg-white p-6 rounded-2xl shadow-lg border border-purple-200">
    <h2 class="text-lg font-semibold text-purple-700">Total Comments</h2>
    <p class="text-4xl font-bold mt-2">{{ stats.totalComments or "0" }}</p>
  </div>
  <div class="bg-white p-6 rounded-2xl shadow-lg border border-purple-200">
    <h2 class="text-lg font-semibold text-purple-700">Total Likes</h2>
    <p class="text-4xl font-bold mt-2">{{ stats.totalLikes or "0" }}</p>
  </div>
</div>
{% endblock %}
